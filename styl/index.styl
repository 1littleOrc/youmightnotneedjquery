@import 'nib'

*, *:after, *:before
  box-sizing border-box

  font-family "proxima-nova", "Helvetica Neue", Helvetica, arial, sans-serif

.page
  max-width 1200px
  margin 0 auto

.browser
  float right
  clear right
  width 49%

.browser.jquery
  float left
  clear left
  margin-right 2%

.comparison
  clearfix()

.slider
  clearfix()

  box-sizing border-box
  width 300px
  margin 20px 0

header
  clearfix()

  input[type="search"]
    float right
    font-size 16px

  .field
    float left

section
  /* Hide section titles when they're empty */

  position relative
  overflow hidden
  
  .comparison
    padding-top 40px
    padding-bottom -40px

  h2
    height 30px
    top 0
    position absolute

input[type='range']
  -webkit-appearance none !important
  
  margin 0
  background-color #F0F0F0
  height 30px
  width 100%

input[type='range']::-webkit-slider-thumb
  -webkit-appearance none !important

  height 20px
  width 20px
  border 2px solid #CCC
  border-radius 5px
  background-color #FCFCFC

.range-label
  float left
  width 33%
  text-align center

.range-label:first-of-type
  text-align left 

.range-label:last-of-type
  text-align right
  
.twitter-share-button
  float: left

.github-stars-button
  float: right
  
